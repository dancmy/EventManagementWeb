<!--This template renders the organiser login page, providing a form for username and password and displaying errors if present.
Demonstrates server-side templating and form handling-->
<!DOCTYPE html>
<html>
<head>
  <title>Organiser Login</title>
  <link rel="stylesheet" type="text/css" href="/main.css" />
</head>
<body>
  <div class="organiser-login-block">
    <h1>Organiser Login</h1>

    <form action="/organiser/login" method="POST">
      <label for="username">Username:</label>
      <input type="text" name="username" required /><br>

      <label for="password">Password:</label>
      <input type="password" name="password" required /><br>

      <button type="submit">Login</button>
    </form>
  </div>

  <% if (typeof error !== 'undefined' && error) { %>
    <div id="loginErrorModal" class="custom-modal active">
      <div class="modal-content">
        <h2><%= error === 'Incorrect password.' ? 'Incorrect password' : 'Login Error' %></h2>
        <button id="tryAgainBtn">Try Again</button>
      </div>
    </div>
    <script>
      document.getElementById('tryAgainBtn').onclick = function() {
        document.getElementById('loginErrorModal').classList.remove('active');
      };
    </script>
  <% } %>
</body>
</html>
