<!--This template renders the organiser event edit page, allowing the organiser to update event details and ticket information.
Demonstrates server-side templating, form handling, and dynamic data population--> 
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Event</title>
  <link rel="stylesheet" type="text/css" href="/main.css" />
</head>

<body>

  <nav class="organiser-navbar">

    <div class="left">
      <a href="/organiser/home">EventPilot</a>
    </div>

    <div class="right">
      <a href="/organiser/create">Create Event</a>
      <a href="/organiser/settings">Settings</a>
      <a href="/organiser/bookings-all">All Bookings</a>
      <a href="/organiser/logout">Logout</a>
    </div>

  </nav>

  <div class="organiser-edit-container">

    <h1>Edit Event</h1>

    <form id="editEventForm" action="/organiser/edit/<%= event.event_id %>" method="POST">
      <p>Title: <input type="text" name="title" value="<%= event.title %>" required /></p>
      <p>Description: <textarea name="description" rows="4"><%= event.description %></textarea></p>
      <p>Date: <input type="date" name="date" value="<%= event.date %>" required /></p>

      <h3>Full-Price Tickets</h3>
      <p>Quantity: <input type="number" name="full_price_tickets" value="<%= event.full_price_tickets %>" required /></p>
      <p>Price: <input type="number" step="0.01" name="full_price" value="<%= event.full_price %>" required /></p>

      <h3>Concession Tickets</h3>
      <p>Quantity: <input type="number" name="concession_tickets" value="<%= event.concession_tickets %>" required /></p>
      <p>Price: <input type="number" step="0.01" name="concession_price" value="<%= event.concession_price %>" required /></p>

      <h3>VIP Tickets</h3>
      <p>Quantity: <input type="number" name="vip_tickets" value="<%= event.vip_tickets %>" required /></p>
      <p>Price: <input type="number" step="0.01" name="vip_price" value="<%= event.vip_price %>" required /></p>

      <button type="submit">Update</button>
    </form>

    <p><a href="/organiser/home">‚Üê Back</a></p>
    
  </div>

  <!-- Event Updated Modal -->
  <div id="editModal" class="modal-overlay">
    <div class="modal-content">
      <h2>Event updated</h2>
      <button id="closeEditModal" class="modal-btn">Okay</button>
    </div>
  </div>

  <script>
    document.getElementById('editEventForm').addEventListener('submit', function(e) {
      e.preventDefault();
      document.getElementById('editModal').style.display = 'flex';
    });
    document.getElementById('closeEditModal').onclick = function() {
      document.getElementById('editModal').style.display = 'none';
      document.getElementById('editEventForm').submit();
    };
  </script>

</body>
</html>

